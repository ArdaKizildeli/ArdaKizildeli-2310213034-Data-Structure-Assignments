#include <stdio.h>
#include <string.h>
#include <ctype.h>

int oncelik(char op) {
    if (op == '+' || op == '-') return 1;
    if (op == '*' || op == '/') return 2;
    if (op == '^') return 3;
    return 0;
}

void infixToPostfix(char* infix) {
    char stack[100];
    int top = -1;
    char postfix[100];
    int k = 0;

    for (int i = 0; infix[i] != '\0'; i++) {
        char sembol = infix[i];

        if (isalnum(sembol)) {
            postfix[k++] = sembol;
        } 
        else if (sembol == '(') {
            stack[++top] = sembol;
        } 
        else if (sembol == ')') {
            while (top != -1 && stack[top] != '(') {
                postfix[k++] = stack[top--];
            }
            top--;
        } 
        else {
            while (top != -1 && oncelik(stack[top]) >= oncelik(sembol)) {
                postfix[k++] = stack[top--];
            }
            stack[++top] = sembol;
        }
    }

    while (top != -1) {
        postfix[k++] = stack[top--];
    }

    postfix[k] = '\0';
    printf("Postfix Ifade: %s\n", postfix);
}

int main() {
    char infix[100];
    printf("Infix ifadeyi giriniz (Ornek: a+b*(c-d)): ");
    scanf("%s", infix);

    infixToPostfix(infix);

    return 0;
}
